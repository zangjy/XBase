<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络请求：校验状态"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.25" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mbDoSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络请求：不校验状态"
            app:layout_constraintStart_toStartOf="@+id/mbRequest"
            app:layout_constraintTop_toBottomOf="@+id/mbRequest" />

        <TextView
            android:id="@+id/tvDes"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:gravity="center"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mbDoSync" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>